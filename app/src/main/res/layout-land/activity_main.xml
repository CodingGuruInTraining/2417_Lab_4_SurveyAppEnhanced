<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hl4350hb.surveyapp.MainActivity">

    <TextView
        android:id="@+id/survey_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_question_string"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/yes_textview"
        android:layout_toStartOf="@+id/yes_textview"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"


        android:layout_alignBaseline="@+id/no_button"
        android:layout_alignBottom="@+id/no_button"
        android:layout_toLeftOf="@+id/reset_button"
        android:layout_toStartOf="@+id/reset_button" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/reset_button"
        android:layout_toEndOf="@+id/reset_button" />

    <TextView
        android:id="@+id/yes_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes: "

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/yes_button"
        android:layout_alignLeft="@+id/yes_button"
        android:layout_alignStart="@+id/yes_button"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/no_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No: "
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/yes_textview"
        android:layout_alignBottom="@+id/yes_textview"
        android:layout_alignLeft="@+id/no_button"
        android:layout_alignStart="@+id/no_button" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />

</RelativeLayout>
